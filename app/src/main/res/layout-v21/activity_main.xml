<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ui1_main_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".FormActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/ui1"
        android:backgroundTint="#EF6C00"
        android:padding="10dp"

        app:srcCompat="@drawable/cafeevening"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:fontFamily="@font/poppins_medium"
                android:padding="1dp"
                android:text="FeedBack"
                android:textColor="#424242"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:hint="Enter Your Name"
                android:inputType="text"
                android:maxLength="20"
                android:padding="15dp"
                android:textColorHint="#AEAEAE" />

            <EditText
                android:id="@+id/number1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:autofillHints=""
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:digits="0123456789"
                android:ems="10"
                android:hint="mobile_number"
                android:inputType="phone"


                android:maxLength="10"
                android:padding="15dp"
                android:textColorHint="#AEAEAE" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="please_rate_us"
                android:textSize="18sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:id="@+id/excellentid"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="@drawable/radio_selector"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center|start|end"
                        android:shadowColor="#4C4C4C"
                        android:text="excellent"
                        android:textColor="@drawable/text_color"
                        android:textColorHighlight="#FF0000"
                        android:textColorHint="#BD00FF"
                        android:textColorLink="#F7FF00"
                        android:textCursorDrawable="@drawable/radio_normal"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/googid"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="@drawable/radio_selector"
                        android:elevation="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center|start|end"
                        android:shadowColor="#4C4C4C"
                        android:text="good"
                        android:textColor="@drawable/text_color"
                        android:textCursorDrawable="@drawable/ui1"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/averageid"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="@drawable/radio_selector"
                        android:elevation="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center|start|end"
                        android:shadowColor="#4C4C4C"
                        android:text="average"
                        android:textColor="@drawable/text_color"
                        android:textCursorDrawable="@color/purple_500"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/poorid"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:background="@drawable/radio_selector"
                        android:elevation="4dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center|start|end"
                        android:shadowColor="#4C4C4C"
                        android:text="poor"
                        android:textColor="@drawable/text_color"
                        android:textColorLink="#FF0000"
                        android:textCursorDrawable="@drawable/ui1"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/worstid"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_selector"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center|start|end"
                        android:shadowColor="#4C4C4C"
                        android:text="worst"
                        android:textColor="@drawable/text_color"
                        android:textCursorDrawable="@drawable/ui1"
                        android:textSize="18sp" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/anysuggestion"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:gravity="start|top"
                android:hint="any_suggestions"
                android:inputType="textCapSentences|textMultiLine"
                android:padding="10dp"
                android:textColorHint="#AEAEAE" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/ui9"
                android:backgroundTint="#BF2600"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:padding="8dp"
                android:text="submit"
                android:textColor="#FFFFFF"
                android:textSize="26sp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>